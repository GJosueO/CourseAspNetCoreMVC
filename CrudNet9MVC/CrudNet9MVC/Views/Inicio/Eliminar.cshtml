@model CrudNet9MVC.Models.Contacto
@{
    ViewData["Title"] = "Vista de Eliminar";
}
<h1 class="text-center fw-bold text-dark">Crear Contacto</h1>
<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-light fw-bold"> Eliminar usuario</h3>
            </div>
            <div class="card-body">
                <form asp-action="Eliminar">
                    <!-- OBTENER EL ID-->
                    <input type="hidden" asp-for="Id" />

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" readonly />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Telefono" class="control-label"></label>
                        <input asp-for="Telefono" class="form-control" readonly />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Celular" class="control-label"></label>
                        <input asp-for="Celular" class="form-control" readonly />
                        <span asp-validation-for="Celular" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" readonly />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-danger d-block mx-auto"><i class="fa fa-address-card" aria-hidden="true"></i> Eliminar usuario</button>
                    </div>
                </form>
                <a asp-controller="Inicio" asp-action="Index" class="link-light btn btn-sm btn-dark">Volver</a>
            </div>
        </div>
    </div>
</div>
